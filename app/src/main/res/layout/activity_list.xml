<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- ImageView to display the product image -->
    <!--<ImageView
        android:id="@+id/productImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/product_image_placeholder"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>-->

    <!-- TextView to display the product name -->
    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"/>

    <!-- TextView to display the product details (price, size, quantity) -->
    <TextView
        android:id="@+id/productDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $10 | Size: M | Quantity: 10"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"/>

    <!-- Button to add the product to the cart -->
    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Cart"
        android:layout_marginTop="4dp"/>


</LinearLayout>

